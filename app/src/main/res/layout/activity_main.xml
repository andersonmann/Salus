<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/salus"
    android:background="#00000000">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/logo"
        android:layout_marginBottom="200dp"
        android:layout_above="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_specialties"
        android:id="@+id/button2"
        android:minWidth="200dp"
        android:backgroundTint="#20BCD2"
        android:backgroundTintMode="src_over"
        android:layout_above="@+id/button3"
        android:layout_centerHorizontal="true"
        android:onClick="onSpecialtiesButtonClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_map"
        android:id="@+id/button3"
        android:minWidth="200dp"
        android:backgroundTint="#20BCD2"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_marginBottom="40dp"
        android:onClick="onMapButtonClick" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:src="@drawable/emergencia"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        android:background="#00000000"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="60dp" />

</RelativeLayout>
